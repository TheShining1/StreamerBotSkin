<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:StreamerBotSkin"
             x:Class="StreamerBotSkin.App"
			 xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
	
    <Application.Styles>
		<FluentTheme Mode="Light"/>
		<StyleInclude Source="avares://Material.Icons.Avalonia/App.xaml"></StyleInclude>
		<StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
	</Application.Styles>
	
	<Application.Resources>
		<themes:BundledTheme BaseTheme="Light" PrimaryColor="Teal" SecondaryColor="Amber"/>
	</Application.Resources>
	<Application.Styles>
		<StyleInclude Source="avares://Material.Avalonia/Material.Avalonia.Templates.xaml" />
	</Application.Styles>
</Application>
