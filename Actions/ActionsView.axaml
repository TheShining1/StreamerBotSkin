<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:sbPanels="clr-namespace:StreamerBotSkin.Panels"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="600"
             x:Class="StreamerBotSkin.Views.ActionsView"
			 xmlns:vm="using:StreamerBotSkin.ViewModels"
			 x:DataType="vm:ActionsViewModel">
	<Design.DataContext>
		<vm:ActionsViewModel/>
	</Design.DataContext>
	<Grid ColumnDefinitions="*,5,*">
		<!--<TextBlock Text="{Binding ModelName}"/>-->
    <sbPanels:ActionsPanel/>
		<GridSplitter Grid.Column="1"/>
		<Grid Grid.Column="2">
			<Grid RowDefinitions="*,5,*,5,*">
        <sbPanels:TriggersPanel Grid.Row="0"/>
				<GridSplitter Grid.Row="1"/>
        <sbPanels:SubActionsPanel Grid.Row="2"/>
				<GridSplitter Grid.Row="3"/>
        <sbPanels:InfoPanel Grid.Row="4"/>
			</Grid>
		</Grid>
	</Grid>
</UserControl>
