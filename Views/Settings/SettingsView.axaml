<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:sbSettingsControls="clr-namespace:StreamerBotSkin.Controls.Settings"
			 xmlns:sbSettingsViews="clr-namespace:StreamerBotSkin.Views.Settings"
             x:Class="StreamerBotSkin.Views.Settings.SettingsView">
	<Grid
		ColumnDefinitions="Auto, *">
		<sbSettingsControls:SettingsMenu Grid.Column="0"/>
		<Carousel Grid.Column="1"
				  x:Name="SettingsCarousel">
			<sbSettingsViews:SettingsMain/>
			<sbSettingsViews:SettingsPlatforms/>
			<sbSettingsViews:SettingsIntegrations/>
			<sbSettingsViews:SettingsStreamApps/>
		</Carousel>
	</Grid>
</UserControl>
