<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
             xmlns:mIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:vm="using:StreamerBotSkin.ViewModels"
             x:DataType="vm:MainWindowViewModel"
             x:Class="StreamerBotSkin.MainBarMenu">
	<Menu>
		<MenuItem VerticalAlignment="Center">
			<MenuItem.Header>
				<mIcons:MaterialIcon Kind="DotsVertical"/>
			</MenuItem.Header>
			<MenuItem Header="Settings"
                Command="{Binding NavigateCommand}"
                CommandParameter="settings">
				<MenuItem.Icon>
					<mIcons:MaterialIcon Kind="Cog" />
				</MenuItem.Icon>
			</MenuItem>
			<MenuItem Header="About"
                Click="AboutDialog_Open">
				<MenuItem.Icon>
					<mIcons:MaterialIcon Kind="AlertCircle" />
				</MenuItem.Icon>
			</MenuItem>
		</MenuItem>
	</Menu>
</UserControl>
