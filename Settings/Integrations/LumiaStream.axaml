<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mAssist="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StreamerBotSkin.LumiaStream">
  <StackPanel>
    <TextBox mAssist:TextFieldAssist.Label="Token"
             PasswordChar="*"
             Classes="clearButton revealPasswordButton"
             mAssist:TextFieldAssist.Hints="LumiaStream->Settings->API Settings"></TextBox>
    <StackPanel Orientation="Horizontal">
      <CheckBox Content="Autoconnect"/>  
      <CheckBox Content="Reconnect"/>
    </StackPanel>
    <Button>Connect</Button>
  </StackPanel>
</UserControl>
