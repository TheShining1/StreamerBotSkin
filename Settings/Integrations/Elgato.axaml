<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mAssist="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
             xmlns:sbAuthControls="clr-namespace:StreamerBotSkin.Controls.Auth;assembly=StreamerBotSkin"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StreamerBotSkin.Elgato">
  <TabControl>
    <TabControl.Items>
      <TabItem Header="Stream Deck">
        <Grid RowDefinitions="Auto"
              ColumnDefinitions="Auto">          
          <sbAuthControls:AuthServer Endpoint="False"
                                     Margin="10"/>
        </Grid>
      </TabItem>
      <TabItem Header="WaveLink">
        <StackPanel>
          <StackPanel Orientation="Horizontal">
            <CheckBox Content="Autoconnect"/>
            <CheckBox Content="Reconnect"/>
          </StackPanel>
          <Button>Connect</Button>
        </StackPanel>
      </TabItem>
    </TabControl.Items>
  </TabControl>
</UserControl>
