<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StreamerBotSkin.Views.CompilerView">
  <ScrollViewer>
    <Grid Margin="10"
        RowDefinitions="Auto, *, Auto">
      <Grid Grid.Row="0"
            ColumnDefinitions="Auto, *, Auto">
        <TextBlock Grid.Column="0">Common references</TextBlock>
        <mIcons:MaterialIcon Grid.Column="2"
                             Kind="Information"
                             ToolTip.Placement="Left">
          <ToolTip.Tip>
            <TextBox MaxWidth="300"
                     TextWrapping="Wrap">Any references added to this list will be automatically added to every Execute C# code when its compiled. Making changes to this list will not invalidate any currently compiled Execute C# code sud-actions.</TextBox>
          </ToolTip.Tip>
        </mIcons:MaterialIcon>
      </Grid>
      <TextBox Grid.Row="1"
           x:Name="refBox">
      </TextBox>
      <CheckBox Grid.Row="2">Auto complete braces and quotes</CheckBox>
    </Grid>
  </ScrollViewer>
</UserControl>
