<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sbControls="clr-namespace:StreamerBotSkin.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StreamerBotSkin.Controls.Interface">
  <Grid ColumnDefinitions="Auto,*,*">
    <StackPanel Grid.Column="0">
      <CheckBox>Minimize to tray</CheckBox>
      <CheckBox>Hide splash screen</CheckBox>
      <CheckBox>Auto open chat on startup</CheckBox>
      <CheckBox>Confirmation on close</CheckBox>
      <Button>Reset Delete Confirations</Button>
      <sbControls:ActionColors/>
    </StackPanel>
    <sbControls:SubActionsEnabled Grid.Column="1"/>
    <sbControls:TriggersEnabled Grid.Column="2"/>    
  </Grid>
</UserControl>
