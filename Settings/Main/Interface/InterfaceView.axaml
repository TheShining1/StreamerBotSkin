<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sbControls="clr-namespace:StreamerBotSkin.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StreamerBotSkin.Views.InterfaceView">
  <Grid ColumnDefinitions="Auto,*,*">
    <StackPanel Grid.Column="0">
      <CheckBox>Minimize to tray</CheckBox>
      <CheckBox>Hide splash screen</CheckBox>
      <CheckBox>Auto open chat on startup</CheckBox>
      <CheckBox>Confirmation on close</CheckBox>
      <Button>Reset Delete Confirmations</Button>
      <sbControls:ActionColors/>
    </StackPanel>
    <sbControls:SubActionsEnabled Grid.Column="1"
                                  Title="Enabled Sub-Actions"/>
    <sbControls:SubActionsEnabled Grid.Column="2"
                                  Title="Enabled Triggers"/> 
  </Grid>
</UserControl>
