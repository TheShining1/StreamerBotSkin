<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StreamerBotSkin.Panels.SubActionsPanel"
			       xmlns:sbModels="clr-namespace:StreamerBotSkin.Models"
             xmlns:vm="using:StreamerBotSkin.ViewModels"
             x:DataType="vm:ActionsViewModel">
  <Grid>
    <TextBlock Grid.Row="2">Sub-Actions</TextBlock>
    <DataGrid Grid.Row="1"
                x:Name="ActionsGrid"
                ColumnWidth="*"
                ItemsSource="{Binding Path=currentAction.Actions}">
      <DataGrid.Columns>
        <DataGridCheckBoxColumn Header="Enabled"
							x:DataType="sbModels:SBSubAction"
							Binding="{Binding Enabled}"/>
        <DataGridTextColumn Header="Type"
									x:DataType="sbModels:SBSubAction"
									Binding="{Binding Type}"/>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>
