<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StreamerBotSkin.Views.QuotesView">
  <StackPanel>
    <CheckBox Content="Enabled"/>
    <StackPanel Orientation="Horizontal">
      <ComboBox>
        <ComboBox.Items>
          <ComboBoxItem Content="Perm to add" />
        </ComboBox.Items>
      </ComboBox>
      <CheckBox Content="Allow subscribers"/>
    </StackPanel>
    <DataGrid>
      <DataGrid.Columns>
        <DataGridTextColumn Header="Id"/>
        <DataGridTextColumn Header="Timestamp"/>
        <DataGridTextColumn Header="User"/>
        <DataGridTextColumn Header="Platform"/>
        <DataGridTextColumn Header="Category"/>
        <DataGridTextColumn Header="Quote"/>
      </DataGrid.Columns>
    </DataGrid>
  </StackPanel>
</UserControl>
