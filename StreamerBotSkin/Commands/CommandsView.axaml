<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:mIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
			       xmlns:m="clr-namespace:StreamerBotSkin.Models"
			       xmlns:vm="clr-namespace:StreamerBotSkin.ViewModels"
             x:DataType="vm:CommandsViewModel"
             x:Class="StreamerBotSkin.Views.CommandsView">
  <!--<UserControl.Styles>
    <Style Selector="ToggleButton:unchecked">
      <Setter Property="Template">
