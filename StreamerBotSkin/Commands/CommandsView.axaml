  <Grid RowDefinitions="Auto,*">
    <TextBox Grid.Column="0"
             Watermark="Filter"></TextBox>
    <DataGrid Grid.Row="1"
              ItemsSource="{Binding commandsItems}"
              CanUserResizeColumns="True"
              HorizontalScrollBarVisibility="Visible"
              VerticalScrollBarVisibility="Visible">
      <DataGrid.Columns>
        <DataGridCheckBoxColumn Header=""
                                CanUserResize="False"
                                x:DataType="m:SBCommand"
                                Binding="{Binding Enabled}"
                                Width="24"/>
        <DataGridTextColumn Header="Name"
                            x:DataType="m:SBCommand"
                            Binding="{Binding Name}"/>
        <DataGridTextColumn Header="Command"
                            x:DataType="m:SBCommand"
                            Binding="{Binding Command}"/>
        <DataGridTextColumn Header="Options"
                            x:DataType="m:SBCommand"
                            Binding="{Binding Options}"/>
        <DataGridTextColumn Header="Location"
                            x:DataType="m:SBCommand"
                            Binding="{Binding Location}"/>
        <DataGridTextColumn Header="GCD"
                            x:DataType="m:SBCommand"
                            Binding="{Binding GlobalCooldown}"/>
        <DataGridTextColumn Header="UCD"
                            x:DataType="m:SBCommand"
                            Binding="{Binding UserCooldown}"/>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>
