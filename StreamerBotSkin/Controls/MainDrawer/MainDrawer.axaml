<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
             xmlns:mIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:models="clr-namespace:StreamerBotSkin.Models"
             x:Name="root"
             x:Class="StreamerBotSkin.Controls.MainDrawer">
  <Grid RowDefinitions="Auto, Auto, *, Auto, Auto">
    <StackPanel Grid.Row="0"
                Orientation="Horizontal"
                HorizontalAlignment="Center">
      <Button Classes="Flat">
        <StackPanel Orientation="Horizontal">
          <mIcons:MaterialIcon Kind="Import"
                               Margin="0,5,5,5"/>
          <TextBlock VerticalAlignment="Center">Import</TextBlock>
        </StackPanel>
      </Button>
      <Button Classes="Flat">
        <StackPanel Orientation="Horizontal">
          <mIcons:MaterialIcon Kind="Export"
                               Margin="0,5,5,5"/>
          <TextBlock VerticalAlignment="Center">Export</TextBlock>
        </StackPanel>
      </Button>
    </StackPanel>
    <Separator Grid.Row="1"/>
    <ListBox Grid.Row="2"
             Classes="Drawer"
             ItemsSource="{Binding MenuItems, ElementName=root}">
      <ListBox.ItemTemplate>
        <DataTemplate x:DataType="models:MainDrawerMenuItem">
          <Button Classes="Flat"
                  Content="{Binding Label}"
                  Command="{Binding NavigateCommand, ElementName=root}"
                  CommandParameter="{Binding CommandParameter}"/>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
