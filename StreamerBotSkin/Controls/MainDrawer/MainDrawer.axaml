                HorizontalAlignment="Center">
      <Button Classes="Flat">
        <StackPanel Orientation="Horizontal">
          <mIcons:MaterialIcon Kind="Download"/>
          <TextBlock>Check for updates</TextBlock>
        </StackPanel>
      </Button>
      <StackPanel Orientation="Horizontal"
                  HorizontalAlignment="Center"
