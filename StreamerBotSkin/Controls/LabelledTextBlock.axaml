<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StreamerBotSkin.Controls.LabelledTextBlock"
             x:Name="root">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"
                        SharedSizeGroup="{Binding Group, ElementName=root}"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <TextBlock Grid.Column="0"
               FontWeight="Bold"
               Text="{Binding Label, ElementName=root }"
               HorizontalAlignment="{Binding HorizontalAlignment, ElementName=root }"
               Margin="0 0 5 0"/>
    <TextBlock Grid.Column="1"
               Text="{Binding Text, ElementName=root }"></TextBlock>
  </Grid>
</UserControl>
