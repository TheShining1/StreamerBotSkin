<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:mControls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
             xmlns:mIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:mAssist="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
             x:Class="StreamerBotSkin.Controls.Auth.AuthNone"
             x:Name="root">
  <mControls:Card>
    <StackPanel>
      <StackPanel Orientation="Horizontal">
        <CheckBox Content="Autoconnect"/>
        <CheckBox Content="Reconnect"/>
      </StackPanel>
      <Button Content="Connect"/>
      <Button IsVisible="{Binding Forget, ElementName=root}"
              Content="Forget"/>
    </StackPanel>
  </mControls:Card>
</UserControl>
