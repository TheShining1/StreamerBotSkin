<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
             xmlns:mIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             x:Class="StreamerBotSkin.App"
             xmlns:local="using:StreamerBotSkin"
             RequestedThemeVariant="Default">
  <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

  <Application.DataTemplates>
    <local:ViewLocator/>
  </Application.DataTemplates>

  <Application.Styles>
    <themes:MaterialTheme BaseTheme="Dark" />
    <!--<themes:MaterialTheme />-->
    <mIcons:MaterialIconStyles />

    <StyleInclude Source="avares://StreamerBotSkin/Styles/TabControlScrollable.axaml" />
  </Application.Styles>
</Application>