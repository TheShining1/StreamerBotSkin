<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:sbControlsAuth="clr-namespace:StreamerBotSkin.Controls.Auth"
             x:Class="StreamerBotSkin.Views.InternalServersView">
  <TabControl>
    <TabItem Header="WebSocket">
      <sbControlsAuth:AuthServer Forget="False"/>
    </TabItem>
    <TabItem Header="HTTP">
      <StackPanel Orientation="Horizontal">        
        <sbControlsAuth:AuthServer Endpoint="False" Forget="False"/>
        <ScrollViewer>
          <ListBox>
            <ListBox.Items>
              <TextBlock Text="Line 0"/>
              <TextBlock Text="Line 1"/>
              <TextBlock Text="Line 2"/>
              <TextBlock Text="Line 3"/>
              <TextBlock Text="Line 4"/>
              <TextBlock Text="Line 5"/>
              <TextBlock Text="Line 6"/>
            </ListBox.Items>            
          </ListBox>
        </ScrollViewer>
      </StackPanel>
    </TabItem>
    <TabItem Header="UDP">
      <sbControlsAuth:AuthServer Address="False" Endpoint="False" Forget="False"/>
    </TabItem>
  </TabControl>
</UserControl>
