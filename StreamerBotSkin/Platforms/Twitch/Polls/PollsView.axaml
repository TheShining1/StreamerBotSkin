<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StreamerBotSkin.Views.PollsView">
  <Grid ColumnDefinitions="*,5,*">    
    <DataGrid Grid.Column="0">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Title" />
        <DataGridTextColumn Header="Choices" />
        <DataGridTextColumn Header="Votes" />
        <DataGridTextColumn Header="Winner" />
        <DataGridTextColumn Header="State" />
      </DataGrid.Columns>
    </DataGrid>
    <GridSplitter Grid.Column="1"/>
    <ListBox Grid.Column="2">
      <ListBox.Items>
        <TextBlock Text="Title" />
        <TextBlock Text="Votes" />
        <TextBlock Text="Point votes" />
        <TextBlock Text="Total votes" />
      </ListBox.Items>
    </ListBox>
  </Grid>
</UserControl>
