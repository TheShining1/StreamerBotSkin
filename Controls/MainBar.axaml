<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="480"
             x:Class="StreamerBotSkin.Controls.MainBar"
			 xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia">
	<Grid
		ColumnDefinitions="Auto, *, Auto, Auto"
		VerticalAlignment="Center">
		<ToggleButton
			Grid.Column="0"
			Name="NavDrawerSwitch"
			Classes="Flat TransparentBack"
			Content="{icons:MaterialIconExt Menu}"/>
		<ToggleButton
			Grid.Column="2"
			Classes="Icon">
			<icons:MaterialIcon Kind="ThemeLightDark"></icons:MaterialIcon>
		</ToggleButton>
		<Menu
			Grid.Column="3">
			<MenuItem
				Header="{icons:MaterialIconExt DotsVertical}">
				<MenuItem Header="Settings">
					<MenuItem.Icon>
						<icons:MaterialIcon Kind="Cog" />
					</MenuItem.Icon>
				</MenuItem>
				<MenuItem Header="About">
					<MenuItem.Icon>
						<icons:MaterialIcon Kind="AlertCircle" />
					</MenuItem.Icon>
				</MenuItem>
			</MenuItem>
		</Menu>
	</Grid>
</UserControl>
