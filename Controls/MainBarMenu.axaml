<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:mcontrols="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
             xmlns:mIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
             x:Class="StreamerBotSkin.Controls.MainBarMenu">
	<Menu Width="48"
		  Height="48">
		<MenuItem VerticalAlignment="Stretch"
				  Padding="16">
			<MenuItem.Header>
				<mIcons:MaterialIcon Kind="DotsVertical"/>
			</MenuItem.Header>
			<MenuItem Header="Settings"
					  Click="OpenSettings">
				<MenuItem.Icon>
					<mIcons:MaterialIcon Kind="Cog" />
				</MenuItem.Icon>
			</MenuItem>
			<MenuItem Header="About"
					  Click="AboutDialog_Open">
				<MenuItem.Icon>
					<mIcons:MaterialIcon Kind="AlertCircle" />
				</MenuItem.Icon>
			</MenuItem>
		</MenuItem>
	</Menu>
</UserControl>
