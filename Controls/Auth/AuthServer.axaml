<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="500"
             xmlns:mControls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
             xmlns:mAssist="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
             x:Class="StreamerBotSkin.Controls.Auth.AuthServer"
             x:Name="root">
  <mControls:Card Width="250">
    <StackPanel>
      <CheckBox Content="Autostart"/>
      <TextBox IsVisible="{Binding Address, ElementName=root}"
               mAssist:TextFieldAssist.Label="Address"/>
      <TextBox IsVisible="{Binding Port, ElementName=root}"
               mAssist:TextFieldAssist.Label="Port"/>
      <TextBox IsVisible="{Binding Endpoint, ElementName=root}"
        mAssist:TextFieldAssist.Label="Endpoint"/>
      <Button Content="Start"
              Margin="0 10 0 0"/>
    </StackPanel>
  </mControls:Card>
</UserControl>
