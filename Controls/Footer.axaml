<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:mControls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
             xmlns:mIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="400"
             x:Class="StreamerBotSkin.Footer">
	<mControls:ColorZone Padding="5">
		<Grid HorizontalAlignment="Right"
			  ColumnDefinitions="Auto">
			<Menu Grid.Column="0">
				<MenuItem Header="{mIcons:MaterialIconExt AlertCircle}">
					<MenuItem Header="OBS">
						<MenuItem.Icon>
							<mIcons:MaterialIcon Kind="AlertCircle"/>
						</MenuItem.Icon>
					</MenuItem>
					<MenuItem Header="Twitch">
						<MenuItem.Icon>
							<mIcons:MaterialIcon Kind="AlertCircle"/>
						</MenuItem.Icon>
					</MenuItem>
					<MenuItem Header="YouTube">
						<MenuItem.Icon>
							<mIcons:MaterialIcon Kind="AlertCircle"/>
						</MenuItem.Icon>
					</MenuItem>
					<MenuItem Header="Streamer.Bot">
						<MenuItem.Icon>
							<mIcons:MaterialIcon Kind="AlertCircle"/>
						</MenuItem.Icon>
					</MenuItem>
				</MenuItem>
			</Menu>
		</Grid>
	</mControls:ColorZone>
</UserControl>
